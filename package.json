{
	"name": "the-handbook",
	"version": "0.0.0",
	"description": "The 23people's Public Company Handbook",
	"engines": {
		"bun": ">=1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"repository": "git@github.com:23people-io/the-handbook.git",
	"type": "module",
	"private": true,
	"scripts": {
		"lint:markdown": "bunx markdownlint-cli2 'docs/**/*.md' '!node_modules/**' '!dist/**' '!.*/**' '!.backup/**' '!.venv/**'",
		"format:markdown": "bunx markdownlint-cli2 'docs/**/*.md' '!node_modules/**' '!dist/**' '!.*/**' '!.backup/**' '!.venv/**' --fix",
		"husky": "husky"
	},
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"@types/node": "^24.10.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/github": "^10.3.5",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"typescript": "latest",
		"husky": "^9.1.7"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/changelog",
				{
					"changelogFile": "CHANGELOG.md"
				}
			],
			"@semantic-release/github"
		]
	}
}
