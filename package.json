{
	"name": "the-handbook",
	"version": "0.0.0",
	"description": "The 23people's Public Company Handbook",
	"engines": {
		"bun": ">=1.3.2"
	},
	"packageManager": "bun@1.3.2",
	"repository": "git@github.com:23people-io/the-handbook.git",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "bunx uv run mkdocs serve -a 127.0.0.1:2300",
		"build": "bunx uv venv --clear && bunx uv sync && bunx uv run mkdocs build",
		"lint:markdown": "bunx markdownlint-cli2 'docs/**/*.md' '!node_modules/**' '!dist/**' '!.*/**' '!.backup/**' '!.venv/**'",
		"format:markdown": "bunx markdownlint-cli2 'docs/**/*.md' '!node_modules/**' '!dist/**' '!.*/**' '!.backup/**' '!.venv/**' --fix",
		"husky": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/github": "^10.3.5",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"semantic-release": "^24.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"@types/bun": "^1.3.2",
		"@types/node": "^24.10.1",
		"husky": "^9.1.7",
		"typescript": "latest",
		"wrangler": "4"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
